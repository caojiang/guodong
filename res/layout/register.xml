<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    

<FrameLayout
    android:id="@+id/fl_register_account"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    >
    <TextView
        android:paddingLeft="10dp"
        android:id="@+id/tv_register_zhanghao"
        android:text="账号:"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_width="wrap_content"/>
    <EditText 
        android:id="@+id/et_register_zhanghao"
        android:paddingLeft="100dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
       />
</FrameLayout>
<FrameLayout
    android:id="@+id/fl_register_mail"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/fl_register_account"
    android:layout_marginTop="15dp"
    >
    <TextView
        android:paddingLeft="10dp"
        android:id="@+id/tv_register_mail"
        android:text="电子邮箱:"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_width="wrap_content"/>
    <EditText 
        android:paddingLeft="100dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:inputType="textEmailAddress"
       />
</FrameLayout>
<FrameLayout
    android:id="@+id/fl_register_mima"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/fl_register_mail"
    android:layout_marginTop="15dp"
    >
    <TextView
        android:paddingLeft="10dp"
        android:id="@+id/tv_register_mima"
        android:text="密码:"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_width="wrap_content"/>
    <EditText 
        android:paddingLeft="100dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:password="true"
       />
</FrameLayout>
<FrameLayout
    android:id="@+id/fl_register_querenmima"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/fl_register_mima"
    android:layout_marginTop="15dp"
    >
    <TextView
        android:paddingLeft="10dp"
        android:id="@+id/tv_register_querenmima"
        android:text="确认密码:"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_width="wrap_content"/>
    <EditText 
        android:paddingLeft="100dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:password="true"
       />
</FrameLayout>
<Button 
    android:layout_below="@id/fl_register_querenmima"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="提交注册"/>

<ImageView
    android:id="@+id/iv_register_touxiang"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_alignParentRight="true"
    android:layout_marginTop="3dp"
    android:src="@drawable/pic_1" />

</RelativeLayout>
