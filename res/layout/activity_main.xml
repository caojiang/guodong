<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


                    <TextView
                        android:id="@+id/tv_main_showinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="欢迎登陆！"
                        android:textColor="#0000F1"
                        android:textSize="50dp" />

                    <EditText
                        android:id="@+id/et_main_zhanghao"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100dp"
                        android:hint="@string/inputzhanghao" />

                    <EditText
                        android:id="@+id/et_main_password"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/et_main_zhanghao"
                        android:hint="@string/password"
                        android:password="true" />

                    <CheckBox
                        android:id="@+id/cb_main_jizhumima"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/et_main_password"
                        android:text="记住密码" />

                    <CheckBox
                        android:id="@+id/cb_main_autoLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/et_main_password"
                        android:layout_toRightOf="@id/cb_main_jizhumima"
                        android:text="自动登录" />

                    <Button
                        android:id="@+id/btn_main_login"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cb_main_autoLogin"
                        android:text="登陆" />

                    <TextView
                        android:id="@+id/tv_main_fogetpassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:text="忘记密码？"
                        android:textSize="20sp"
                        android:textColor="#0000f1" />

                    <TextView
                        android:id="@+id/tv_main_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_main_fogetpassword"
                        android:layout_alignBottom="@+id/tv_main_fogetpassword"
                        android:layout_alignParentRight="true"
                        android:text="注册用户"
                        android:textSize="20sp"
                        android:textColor="#0000f1" />
                </RelativeLayout>

